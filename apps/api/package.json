{
  "name": "@crm/api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "db:generate": "tsx node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "tsx node_modules/drizzle-kit/bin.cjs studio",
    "db:seed": "tsx src/scripts/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@crm/shared": "workspace:*",
    "argon2": "^0.44.0",
    "bullmq": "^5.66.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "html-to-text": "^9.0.5",
    "ioredis": "^5.9.1",
    "nodemailer": "^7.0.12",
    "pino": "^10.1.1",
    "pino-http": "^11.0.0",
    "postgres": "^3.4.8",
    "uuidv7": "^1.1.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@crm/config": "workspace:*",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/html-to-text": "^9.0.4",
    "@types/node": "^25.0.6",
    "@types/nodemailer": "^7.0.5",
    "@types/pino-http": "^6.1.0",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
